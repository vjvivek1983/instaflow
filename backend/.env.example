PROJECT_NAME="InstaFlow"
API_V1_STR="/api/v1"

# Important: Set to a strong, random string in production
SECRET_KEY="changeme_in_production_or_dot_env"
ACCESS_TOKEN_EXPIRE_MINUTES=11520 # 8 days

# Database - These are typically set by docker-compose for dev, but good to list
POSTGRES_SERVER="db"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="postgres"
POSTGRES_DB="instaflow"
# SQLALCHEMY_DATABASE_URI will be assembled from the above

# Redis - Typically set by docker-compose for dev
REDIS_HOST="redis"
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=

# Instagram API Credentials - REQUIRED for Instagram integration
INSTAGRAM_APP_ID="your_instagram_app_id"
INSTAGRAM_APP_SECRET="your_instagram_app_secret"
# INSTAGRAM_GRAPH_API_VERSION="v12.0" # Already has a default in config.py

# Email - Optional, for email sending features
# SMTP_TLS=True
# SMTP_PORT=587
# SMTP_HOST="smtp.example.com"
# SMTP_USER="user@example.com"
# SMTP_PASSWORD="your_email_password"
# EMAILS_FROM_EMAIL="noreply@example.com"
# EMAILS_FROM_NAME="InstaFlow"

# First Superuser - These are typically set by docker-compose for dev
FIRST_SUPERUSER_EMAIL="admin@example.com"
FIRST_SUPERUSER_PASSWORD="admin_password" # Change this

# Comma-separated list of allowed CORS origins
# Example: BACKEND_CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000,https://your.frontend.domain"
BACKEND_CORS_ORIGINS="http://localhost:3000"
